h1 Review Index
.container-fluid
  .row
    table.table
      thead
        tr
          th Title
          th Description
      tbody
        = @reviews.each do |review|
        td = @review.title
        td = @review.description
        td = link_to 'Show', review_path(@review)
        td = link_to 'Edit', edit_review_path(@review)
        td = link_to 'Destroy', review_path(@review), method: :delete, data: { confirm: "Sure?" }

  .row
    button = link_to "Home", root_path
